<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RestaurantMobileApp.Views.TableDetailPage"
             Title="{Binding Title}">

    <StackLayout Spacing="20" Padding="15">
        <Label Text="Numer:" FontSize="Medium" />
        <Label Text="{Binding Number}" FontSize="Small"/>
        <Label Text="Opis:" FontSize="Medium" />
        <Label Text="{Binding Description}" FontSize="Small"/>
        <Label Text="Status stolika:" FontSize="Medium" />
        <Label Text="{Binding State}" FontSize="Small"/>
        <StackLayout Orientation="Horizontal">
            <Button Text="Reserve" Command="{Binding AddReservation}" HorizontalOptions="FillAndExpand"></Button>
            <Button Text="Make free" Command="{Binding MakeFree}" HorizontalOptions="FillAndExpand"></Button>
            <Button Text="Add order" Command="{Binding AddOrder}" HorizontalOptions="FillAndExpand"></Button>
        </StackLayout>
    </StackLayout>

</ContentPage>